
@{
    Layout = "_dashboard";
}
@section breadcrumb {
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Add New Customer</h4>
                <div class="ms-auto text-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href="#">Add New</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
}
@if (ViewBag.msg != null)
{
    <div class="alert alert-success">
        @ViewBag.msg
    </div>
}
<form class="form-horizontal" method="post" ">
    <div class="card-body">
        <div class="form-group row">
            <label for="name"
                   class="col-sm-3 text-end control-label col-form-label">Name</label>
            <div class="col-sm-9">
                <input type="text"
                       class="form-control"
                       id="name"
                       placeholder="Name Here"
                       name="name" />
            </div>
        </div>
        <div class="form-group row">
            <label for="email"
                   class="col-sm-3 text-end control-label col-form-label">Email</label>
            <div class="col-sm-9">
                <input type="text"
                       class="form-control"
                       id="email"
                       placeholder="Email Here"
                       name="email" />
            </div>
        </div>
        <div class="form-group row">
            <label for="phone"
                   class="col-sm-3 text-end control-label col-form-label">Phone</label>
            <div class="col-sm-9">
                <input type="text"
                       class="form-control"
                       id="phone"
                       placeholder="Phone Here"
                       name="phone" />
            </div>
        </div>
        <div class="form-group row">
            <label for="fname"
                   class="col-sm-3 text-end control-label col-form-label">Gender</label>
            <div class="col-sm-9">
                <select class="form-select" name="gender">
                  
                    <option value="m">Male</option>
                        <option value="f">Female</option>
                   
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="pass"
                   class="col-sm-3 text-end control-label col-form-label">Password</label>
            <div class="col-sm-9">
                <input type="password"
                       class="form-control"
                       id="pass"
                       placeholder="Password Here"
                       name="password" />
            </div>
        </div>
    </div>
    <div class="border-top">
        <div class="card-body">
            <button type="submit" class="btn btn-primary">
                Create
            </button>
        </div>
    </div>
</form>
<partial name="_ValidationScriptsPartial"></partial>